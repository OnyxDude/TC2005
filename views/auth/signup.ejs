<%- include('../partials/header') %>

<div class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto bg-gray-800 rounded-lg p-6 shadow-lg border border-gray-700">
        <h1 class="text-2xl font-bold text-spotify-green mb-6 text-center">Registrarse</h1>
        
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="bg-red-500 bg-opacity-20 border border-red-500 text-red-300 px-4 py-3 rounded mb-4">
                <%= error %>
            </div>
        <% } %>
        
        <form action="/auth/signup" method="POST" class="space-y-4">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div>
                <label for="name" class="block text-spotify-gray mb-2">Nombre completo</label>
                <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    required 
                    class="w-full bg-gray-900 border border-gray-700 rounded-md py-2 px-4 text-white focus:outline-none focus:ring-2 focus:ring-spotify-green"
                >
            </div>

            <div>
                <label for="username" class="block text-spotify-gray mb-2">Usuario</label>
                <input 
                    type="text" 
                    id="username" 
                    name="username" 
                    required 
                    class="w-full bg-gray-900 border border-gray-700 rounded-md py-2 px-4 text-white focus:outline-none focus:ring-2 focus:ring-spotify-green"
                >
            </div>
            
            <div>
                <label for="password" class="block text-spotify-gray mb-2">Contraseña</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    required 
                    class="w-full bg-gray-900 border border-gray-700 rounded-md py-2 px-4 text-white focus:outline-none focus:ring-2 focus:ring-spotify-green"
                >
            </div>

            <div>
                <label for="confirmPassword" class="block text-spotify-gray mb-2">Confirmar contraseña</label>
                <input 
                    type="password" 
                    id="confirmPassword" 
                    name="confirmPassword" 
                    required 
                    class="w-full bg-gray-900 border border-gray-700 rounded-md py-2 px-4 text-white focus:outline-none focus:ring-2 focus:ring-spotify-green"
                >
            </div>
            
            <button type="submit" class="w-full btn-spotify bg-spotify-green hover:bg-opacity-80 text-white py-2 px-4 rounded-full font-medium transition-all duration-200">
                Registrarse
            </button>
        </form>
        
        <div class="mt-6 text-center">
            <p class="text-spotify-gray">¿Ya tienes una cuenta?</p>
            <a href="/auth/signin" class="text-spotify-green hover:underline">Iniciar sesión</a>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>